<h2><%= Comment.model_name.human %></h2>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:user) %></th>
      <th><strong><%= Report.human_attribute_name(:comment) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% commentable.comments.each do |comment| %>
    <tr>
      <td><%= comment.user.name %></td>
      <td><%= comment.body %></td>
      <td><%= comment.created_at.to_s(:datetime_jp) %></td>
    </tr>
  <% end %>
</tbody>

</table>





<%= form_with(model: [commentable, Comment.new]) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
